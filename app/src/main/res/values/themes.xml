<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ColorSimilarityApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_theme_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  ShapeableImageView Style  -->
    <style name="CornerSize50Percent">
        <item name="cornerSize">50%</item>
    </style>

    <!-- Table Item Style -->
    <style name="Table">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">@color/material_dynamic_neutral_variant95</item>
    </style>
    <style name="Table.Item" parent="Table">
        <item name="android:layout_width">60dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Table.Item.Highlight" parent="Table.Item">
        <item name="android:textColor">@color/selector_highlight_text_color</item>
        <item name="background">@drawable/selector_highlight_box</item>
    </style>
    <style name="Table.Title" parent="Table">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Table.Title.AlignBottom" parent="Table.Title">
        <item name="android:gravity">bottom|center_horizontal</item>
    </style>
    <style name="Table.Title.AlignRight" parent="Table.Title">
        <item name="android:gravity">end|center_vertical</item>
    </style>

</resources>